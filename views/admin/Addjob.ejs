<div class="form-group row">
    <div class="col-md-6 mb-3">
        <label for="Skills">Skills</label>
        <input type="text" placeholder="Skills" class="form-control" name="Skills" id="Skills">
        <button type="button" id="addSkill">Add Skill</button>
        <ul id="selectedSkillsList"></ul>
    </div>
    
    <div class="col-md-6 mb-3">
        <label for="education">Education</label>
        <input type="text" placeholder="Education" class="form-control" name="education" id="education">
        <button type="button" id="addEducation">Add Education</button>
        <ul id="selectedEducationList"></ul>
    </div>
</div>
