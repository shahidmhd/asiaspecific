<script>
 function submitForm(jobId) {
        var formId = "jobForm_" + jobId;
        var form = document.getElementById(formId);
        form.submit();
    }
    document.addEventListener('DOMContentLoaded', function () {
        const jobForm = document.getElementById('jobForm');
        const skillsInput = document.getElementById('Skills');
        const addSkillButton = document.getElementById('addSkill');
        const selectedSkillsList = document.getElementById('selectedSkillsList');
        const educationInput = document.getElementById('education');
        const addEducationButton = document.getElementById('addEducation'); // Corrected the button ID
        const educationList = document.getElementById('selectedEducationList'); // Corrected the list ID
        const selectedSkills = [];
        const selectedEducations = []; // Corrected the array name
        addSkillButton.addEventListener('click', function () {
            const skillValue = skillsInput.value.trim();
            if (skillValue) {
                selectedSkills.push(skillValue);
                updateSelectedSkills();
            }
        });

        addEducationButton.addEventListener('click', function () {
            const educationValue = educationInput.value.trim();
            if (educationValue) {
                selectedEducations.push(educationValue); // Corrected the array name
                updateSelectedEducations(); // Corrected the function name
            }
        });

        function updateSelectedSkills() {
            const hiddenInput = document.createElement('input');
            hiddenInput.type = 'hidden';
            hiddenInput.name = 'selectedSkills';
            hiddenInput.value = JSON.stringify(selectedSkills);

            // Remove existing hidden input to avoid duplicates
            const existingHiddenInput = jobForm.querySelector('input[name="selectedSkills"]');
            if (existingHiddenInput) {
                jobForm.removeChild(existingHiddenInput);
            }

            jobForm.appendChild(hiddenInput);

            // Update the displayed selected skills
            selectedSkillsList.innerHTML = selectedSkills.map(skill => `<li>${skill}</li>`).join('');
        }

        function updateSelectedEducations() {
            const hiddenInput = document.createElement('input');
            hiddenInput.type = 'hidden';
            hiddenInput.name = 'selectedEducations'; // Corrected the name
            hiddenInput.value = JSON.stringify(selectedEducations);

            // Remove existing hidden input to avoid duplicates
            const existingHiddenInput = jobForm.querySelector('input[name="selectedEducations"]'); // Corrected the name
            if (existingHiddenInput) {
                jobForm.removeChild(existingHiddenInput);
            }

            jobForm.appendChild(hiddenInput);

            // Update the displayed selected education
            educationList.innerHTML = selectedEducations.map(edu => `<li>${edu}</li>`).join('');
        }

        const cancelBtn = document.getElementById('cancelBtn');
        cancelBtn.addEventListener('click', function () {
            jobForm.reset();
            selectedSkills.length = 0;
            selectedEducations.length = 0; // Corrected the array name
            updateSelectedSkills();
            updateSelectedEducations(); // Corrected the function name
        });
    });
</script>