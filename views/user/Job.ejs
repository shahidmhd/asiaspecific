<!-- Services Section Start -->
<div class="rs-services services-style5 services-carrers-modify1 bg19 pt-120 pb-170 md-pt-80 sm-pt-80 sm-pb-80">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="sec-title mb-65 md-mb-30">
                    <h2 class="title title3">
                        Job Opportunities
                    </h2>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="btn-part text-right md-left md-mb-30">
                          <a class="readon details" href="careers-single.html">Discover renovix</a>
                      </div>
            </div>
        </div>
        <div class="row">
            <% if (jobs.length > 0) { %>
                <% jobs.forEach(function(job) { %>
                    <div class="col-lg-4 col-md-6 mb-20">
                        <div class="services-item">
                            <div class="services-wrap">
                                <div class="services-icon">
                                    <img src="/images/services/main-home/main-icons/1.png" alt="Services">
                                </div>
                                <div class="services-text">
                                    <h2 class="title"><%= job.category %></h2>
                                    <p class="services-txt"><%= job.description %></p>
                                    <div class="services-btn">
                                        <a class="readon read-more apply" href="/jobdetail/<%= job._id %>">Apply Now<i class="fa fa fa-angle-right"></i></a>
                                    </div>
                                    <div class="serial-number"><%= job._id %></div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12">
                    <p>No jobs available for this country.</p>
                </div>
            <% } %>
            
          
            
        </div>
    </div>
</div>
<!-- Services Section End -->

